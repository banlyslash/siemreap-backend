PORT=3001
NODE_ENV=development
API_PREFIX=/api

# Database Configuration
# Add connection pooling parameters to prevent "too many clients already" error
# connection_limit: Maximum number of connections in the pool (default: num_cpus * 2 + 1)
# pool_timeout: Maximum time to wait for a connection from the pool in seconds (default: 10)
DATABASE_URL="postgresql://user:password@localhost:5432/dbname?connection_limit=10&pool_timeout=20"

# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-production
